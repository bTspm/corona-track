.container-fluid
  -# = render partial: "corona/countries_dropdown", locals: { countries_for_select: @countries.for_select }
  .mb-4
  = render partial: "top_stats", locals: { stats: @corona_data.stats }

  .row
    .col-md-12.col-lg-8
      .card.mb-2
        .card-header
          Country / Other Stats
        .card-body
          = render_async corona_countries_stats_path

    .col-md-12.col-lg-4
      %div
        .card.mb-2
          .card-header
            Time Series
          .card-body
            = render_async corona_global_time_series_path
      %div
        .card.mb-2
          .card-header
            Recovery vs Mortality Rate
          .card-body
            = render partial: "pie_chart", locals: { chart_data: @corona_data.stats.pie_chart_data }
